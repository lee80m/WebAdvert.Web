@model WebAdvert.Web.Models.Accounts.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <h4>Log in with email and password</h4>
        <h5>
            <a asp-controller="Accounts" asp-action="Signup">
                If not a member yet, you can sign up here
            </a>

            <form class="row" method="post" asp-controller="Accounts" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-md-12 mb-2">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-2">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>            
                </div>

                <div class="col-md-12 mb-2">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        <label asp-for="RememberMe" class="form-check-label" for="flexCheckDefault">
                            Remember Me
                        </label>
                    </div>
                </div>

                <div class="col-md-12 mb-3">
                    <button type="submit" class="btn btn-secondary">Login</button>
                </div>

                <div class="col-md-12 mb-3">
                    <p>
                        <a asp-controller="Accounts" asp-action="Signup">Register as a new user</a>
                    </p>
                    <p>
                        <a asp-controller="Accounts" asp-action="ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </h5>
    </div>
</div>

